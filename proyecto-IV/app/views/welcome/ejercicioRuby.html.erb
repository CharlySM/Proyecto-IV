require 'nokogiri'
require 'open-uri'
require 'markaby'
#Se carga la pagina pasando el enlace
html=open("https://resultados.as.com/resultados/futbol/primera/equipos/").read

doc=Nokogiri::HTML(html)

cont=0
array=Array.new(20)
#Se carga en el array los elementos dd del fichero html de la pagina
doc.search('.escudo').map do |element|
	cadena=element.inner_text
	array[cont]=cadena

	cont=cont+1
end

var = 0  
var1 = 0
while var1 < array.size() 
	puts array[var1]
	var1+=1
end

mab = Markaby::Builder.new
  mab.html do
    head { title "Boats.com" }
    body do
      h1 "Boats.com has great deals"
      ul do
        while var < array.size() 
			li array[var]
			var+=1
		end
      end
    end
  end
  puts mab.to_s
